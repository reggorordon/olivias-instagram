<div class="container center-block">
  
<div class="row col-md-12 ">
  <% @posts.each do |post| %>
    <div class="post col-md-6">
      <div class="post-head">
        <div class="name">

        </div>
      </div>
      <div class="image center-block">
          <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
      </div>
      <p class="caption">
        <%= post.caption %>
      </p>
    </div>
  <% end %>
</div>
</div>